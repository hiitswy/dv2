{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Arrivals in Australia by Country of Citizenship (updated July 2024)",
  "width": 1000,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 175,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 1000,
        "step": 50,
        "name": "Zoom: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/hiitswy/dv2/refs/heads/main/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth", "scale": {"expr": "zoom_level"}},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hiitswy/dv2/refs/heads/main/coc_final.csv"
            },
            "key": "Country",
            "fields": ["Total_Arrival"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "Total_Arrival",
          "title": "Total Arrival",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain":[100,1000,10000,100000,500000,1000000],
            "range":["#fef0d9", "#fdd49e", "#fdbb84", "#fc8d59", "#e34a33", "#b30000"]

          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Total_Arrival",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Total Arrival"
          }
        ]
      }
    }
  ],
  "config": {}
}