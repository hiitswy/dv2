{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Number of Short-Term Visitors Arriving to Different States from 2019 to 2024",
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/hiitswy/dv2/refs/heads/main/visitors_each_state.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2024,
        "step": 1,
        "name": "Select Year "
      }
    }
  ],
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/hiitswy/3179/refs/heads/main/w9homework/ne_10m_admin_1_states_provinces.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_states_provinces"
          }
        },
        "key": "properties.name"
      },
      "as": "geo"
    },
    {"filter": "datum.Year == yearSelection"}
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Number of Visitors",
          "type": "quantitative",
          "scale": {"scheme": "tealblues"},
          "title": "Number of Visitors"
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {
            "field": "Number of Visitors",
            "type": "quantitative",
            "title": "Visitors",
            "format": ",.0f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 13,
        "fontWeight":"bold",
        "color": "red",
        "dy": -10,
        "dx": 10
      },
      "encoding": {
        "longitude": {"field": "geo.properties.longitude"},
        "latitude": {"field": "geo.properties.latitude"},
        "text": {
          "condition": {
            "test": "datum.State === 'New South Wales'",
            "value": {"signal": "'New South Wales: ' + format(datum['Number of Visitors'], ',.0f') + ' Visitors'"}
          }
        }
      }
    }
  ],
  "config": {}
}
